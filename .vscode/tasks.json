{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "C:/MinGW/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                "-O2",
                "-Wconversion",
                "-Wshadow",
                "-Wall",
                "-Wextra",
                "-D_GLIBCXX_DEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}